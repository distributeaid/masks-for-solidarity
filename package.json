{
  "name": "@distributeaid/refugees.care",
  "version": "0.0.0-development",
  "description": "Website for the Refugees Care project",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect",
    "postinstall": "check-node-version --package",
    "lint": "eslint --ext .js,.ts,.tsx src",
    "build": "gatsby build --prefix-paths && node critical-css.js",
    "start": "gatsby develop"
  },
  "keywords": [
    "Distribute Aid",
    "Refugees Care",
    "GatsbyJS",
    "React",
    "TypeScript",
    "Netlify",
    "GitHub Actions"
  ],
  "author": "Distribute Aid | https://distributeaid.org/",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/distributeaid/refugees.care/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/distributeaid/refugees.care.git"
  },
  "homepage": "https://github.com/distributeaid/refugees.care#readme",
  "dependencies": {
    "feather-icons": "4.28.0",
    "hast-to-hyperscript": "9.0.0",
    "polished": "4.0.1",
    "styled-components": "5.2.0",
    "snyk": "1.409.0"
  },
  "snyk": true,
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "devDependencies": {
    "@bifravst/code-style": "8.0.117",
    "@bifravst/eslint-config-typescript": "5.0.51",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-angular": "11.0.0",
    "@types/react-dom": "16.9.8",
    "@types/react-helmet": "6.1.0",
    "@types/styled-components": "5.1.3",
    "babel-plugin-styled-components": "1.11.1",
    "check-node-version": "4.0.3",
    "eslint-plugin-react": "7.21.3",
    "gatsby": "2.24.67",
    "gatsby-cli": "2.12.102",
    "gatsby-plugin-react-helmet": "3.3.12",
    "gatsby-plugin-react-svg": "3.0.0",
    "gatsby-plugin-styled-components": "3.3.12",
    "gatsby-plugin-typescript": "2.4.21",
    "gatsby-remark-external-links": "0.0.4",
    "gatsby-source-filesystem": "2.3.32",
    "gatsby-source-sanity": "6.0.4",
    "gatsby-transformer-remark": "2.8.37",
    "husky": "4.3.0",
    "jsdom": "16.4.0",
    "lint-staged": "10.4.0",
    "minimalcss": "0.11.0",
    "node-static": "0.7.11",
    "prettier": "2.1.2",
    "react-dom": "16.13.1",
    "react-helmet": "6.1.0",
    "rehype-react": "6.1.0",
    "ts-node": "9.0.0",
    "typescript": "4.0.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts,.tsx"
    ],
    "*.{md,json,yaml,yml,js}": [
      "prettier --write"
    ]
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
